@model LuckySpin.Models.Player
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}
<h2>Pick your Number</h2>
<form asp-action="Index" asp-controller="Spinner">
    <fieldset>
        <label>
            <input placeholder=" Your First Name" asp-for="FirstName" value="Brian" />
            <span asp-validation-for="FirstName"></span>
        </label>
        <label>
            <select asp-for="Luck">
                <option disabled>Luck Number</option>
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option selected>5</option>
                <option>6</option>
                <option>7</option>
                <option>8</option>
                <option>9</option>
            </select>
            <span asp-validation-for="Luck"></span>
        </label>
        <label asp-for="StartingBalance"><input asp-for="StartingBalance" value="10"/>
        <span asp-validation-for="StartingBalance"></span></label>

    </fieldset>
    <input type="submit" value="Start the Game" />
</form>